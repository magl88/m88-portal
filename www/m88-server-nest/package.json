{
	"name": "m88-server-nest",
	"version": "1.0.0",
	"description": "Backend for M88 portal",
	"author": {
		"name": "Magl88",
		"url": "https://magl88.net",
		"email": "info@magl88.net"
	},
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"dev": "nest start --watch --env-file .env",
		"dev:docker": "nest start --watch --env-file .env.dev.docker",
		"dev:local": "nest start --watch --env-file .env.dev.local",
		"debug": "nest start --debug --watch",
		"prod": "node dist/main",
		"prettier": "prettier --write .",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"db:studio": "prisma studio",
		"db:push": "prisma db push",
		"db:pull": "prisma db pull",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:deploy": "npx prisma migrate deploy && npx prisma generate"
	},
	"dependencies": {
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/swagger": "^11.2.0",
		"@nestlab/google-recaptcha": "^3.10.0",
		"@prisma/client": "^6.9.0",
		"@react-email/components": "^0.1.0",
		"@react-email/html": "^0.0.11",
		"argon2": "^0.43.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"connect-redis": "^9.0.0",
		"cookie-parser": "^1.4.7",
		"dotenv": "^16.5.0",
		"express-session": "^1.18.1",
		"helmet": "^8.1.0",
		"ioredis": "^5.6.1",
		"minio": "^8.0.5",
		"nestjs-i18n": "^10.5.1",
		"nestjs-minio-client": "^2.2.0",
		"redis": "^5.5.6",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.7",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/minio": "^7.1.0",
		"@types/multer": "^1.4.13",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.34.0",
		"@typescript-eslint/parser": "^8.34.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"globals": "^16.0.0",
		"jest": "^29.7.0",
		"prettier": "^3.4.2",
		"prisma": "^6.9.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
